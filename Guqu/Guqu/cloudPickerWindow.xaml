<Window x:Class="Guqu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Guqu"
        mc:Ignorable="d"
        Title="cloudPicker" Height="350" Width="350"
        ResizeMode="NoResize">
    <Grid>
        <Button  Width="75" Margin="20,97,197,97" Click="boxClick">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="box.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button  Height=" 75"  Width="75" Click="oneDriveClick">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="oneDrive.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Height="75" Width="75" Margin="197,97,20,97" Click="googleDriveClick">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="googleDrive.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Width="110" Height="20" Margin="91,33,91,216">Select account type</TextBlock>
    </Grid>
</Window>
