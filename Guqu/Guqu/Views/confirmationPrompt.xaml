<Window x:Class="Guqu.confirmationPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Guqu"
        mc:Ignorable="d"
        Title="confirmationPrompt" Height="150" Width="300"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="textBlock" Text="Are you sure?" HorizontalAlignment="Left" TextAlignment="Center" Height="22" Margin="45,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206"/>
        <Button x:Name="yesButton" Content="Yes" HorizontalAlignment="Left" Margin="33,79,0,0" VerticalAlignment="Top" Width="75" Click="yesClick"/>
        <Button x:Name="noButton" Content="No" HorizontalAlignment="Left" Margin="176,79,0,0" VerticalAlignment="Top" Width="75" Click="noClick"/>

    </Grid>
</Window>
