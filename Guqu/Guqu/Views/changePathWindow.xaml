<Window x:Class="Guqu.changePathWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Guqu"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="changePathWindow">

    <Grid>
        <Button Content="..." HorizontalAlignment="Left" Margin="202,163,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.333,-0.25" Height="30" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="23,213,0,0" VerticalAlignment="Top" Width="75" Height="30" RenderTransformOrigin="0.173,0.5" Click="Cancel_Click"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="202,213,0,0" VerticalAlignment="Top" Width="75" Height="30" Click="Confirm_Click"/>
        <TextBox x:Name="currFolder" HorizontalAlignment="Left" Height="30" Margin="23,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="165"/>
        <TextBlock HorizontalAlignment="Left" Height="81" Margin="23,47,0,0" TextWrapping="Wrap" Text="Select the location you want your metadata files to be stored locally." VerticalAlignment="Top" Width="254"/>

    </Grid>
</Window>
